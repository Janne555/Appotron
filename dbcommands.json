{
	"database": "inventor-v.0.2.0.db",
	"tables":
	[
	{
		"name": "User",
		"columns":
		[
		{
			"id": "STRING PRIMARY KEY",
			"name": "STRING NOT NULL UNIQUE",
			"password": "STRING NOT NULL",
			"deleted": "BOOLEAN NOT NULL"
		}
		]
	},
	{
		"name": "Item",
		"columns":
		[
		{
			"uuid": "STRING PRIMARY KEY",
			"name": "STRING NOT NULL",
			"serial_number": "STRING NOT NULL",
			"location": "STRING NOT NULL",
			"created_on": "TIMESTAMP NOT NULL",
			"type": "STRING NOT NULL",
			"deleted": "BOOLEAN NOT NULL"
		}
		]
	},
	{
		"name": "ShoppingList",
		"columns":
		[
		{
			"id": "INTEGER PRIMARY KEY AUTOINCREMENT",
			"name": "STRING NOT NULL",
			"created_on": "TIMESTAMP NOT NULL",
			"deleted": "BOOLEAN NOT NULL"
		}
		]
	},
	{
		"name": "ListItem",
		"columns":
		[
		{	
			"id": "INTEGER PRIMARY KEY AUTOINCREMENT",
			"shopping_list": "INTEGER NOT NULL",
			"serial_number": "STRING NOT NULL",
			"amount" : "INTEGER NOT NULL",
			"FOREIGN ": "KEY(shopping_list) REFERENCES ShoppingList(id)",
			"FOREIGN ": "KEY(serial_number) REFERENCES Item(serial_number)"
		}
		]
	},
	{
		"name": "Loan",
		"columns":
		[
		{
			"user": "STRING NOT NULL",
			"item_uuid": "STRING NOT NULL",
			"created_on": "TIMESTAMP NOT NULL",
			"returned": "BOOLEAN NOT NULL",
			"deleted": "BOOLEAN NOT NULL",
			"FOREIGN ": "KEY(user) REFERENCES User(uuid)",
			"FOREIGN ": "Key(item_uuid) REFERENCES Item(uuid)"
		}
		]
	},
	{
		"name": "Tag",
		"columns":
		[
		{
			"id": "INTEGER PRIMARY KEY AUTOINCREMENT",
			"identifier": "STRING NOT NULL",
			"key": "STRING NOT NULL",
			"value": "STRING",
			"type": "STRING NOT NULL",
			"FOREIGN ": "KEY(identifier) REFERENCES item(serial_number)"
		}
		]
	},
	{
		"name": "Serving",
		"columns":
		[
		{	
			"id": "INTEGER PRIMARY KEY",
			"user": "STRING NOT NULL",
			"identifier": "STRING NOT NULL",
			"mass": "INTEGER NOT NULL",
			"date": "TIMESTAMP NOT NULL",
			"deleted": "BOOLEAN NOT NULL",
			"FOREIGN ": "KEY(user) REFERENCES User(uuid)",
			"FOREIGN ": "Key(identifier) REFERENCES Item(serial_number)"
		}
		]
	},
	{
		"name": "NutritionalInfo",
		"columns":
		[
		{
			"energy": "FLOAT",
			"identifier": "STRING NOT NULL",
			"carbohydrate": "FLOAT",
			"fat": "FLOAT",
			"protein": "FLOAT",
			"FOREIGN ": "Key(identifier) REFERENCES Item(serial_number)"
		}
		]
	}
	]
}